{
  "env": {
    "es2020": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "plugins": [
    "jest",
    "jest-formatting"
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"],
    "jest/consistent-test-it": ["error", {"fn": "test"}],
    "jest-formatting/padding-around-all": 1
  }
}
